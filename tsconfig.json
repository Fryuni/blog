{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@exm/*": ["src/components/examples/*"],
      "@require/*": ["src/components/requireFeatures/*"]
    },
    "lib": ["dom"]
  },
  "include": [
    "*.ts",
    "src/**/*",
    "plugins/**/*",
    ".astro/**/*"
  ]
}
